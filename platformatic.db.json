{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}"
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "openapi": true,
    "graphql": true,
    "ignore": {
      "versions": true
    }
  },
  "types": {
    "autogenerate": true
  },
  "dashboard": true,
  "metrics": true,
  "migrations": {
    "dir": "migrations"
  },
  "plugin": {
    "path": "plugin.ts",
    "options": {
      "hello": "world"
    },
    "typescript": {
      "outDir": "dist"
    }
  }
}
